{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "./ai-agent": ["../core/src/ai-agent"],
      "./ai-provider": ["../core/src/ai-provider"],
      "./config": ["../core/src/config"],
      "./models": ["../core/src/models"],
      "./prompts": ["../core/src/prompts"],
      "./subagents": ["../core/src/subagents"],
      "./themes": ["../core/src/themes"],
      "./compaction": ["../core/src/compaction"],
      "./copilot-auth": ["../core/src/copilot-auth"],
      "./tools-standalone": ["../core/src/tools/tools-standalone"],
      "./indexer/*": ["../core/src/indexer/*"],
      "@erzencode/core": ["../core/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "../core" }
  ]
}
