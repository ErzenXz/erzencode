{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@erzencode/core": ["../core/src/index.ts"],
      "@erzencode/core/*": ["../core/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "../core" }
  ]
}
