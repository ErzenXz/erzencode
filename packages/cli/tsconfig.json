{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@erzencode/core": ["../core/dist/index.d.ts"],
      "@erzencode/core/*": [
        "../core/dist/*.d.ts",
        "../core/dist/*/index.d.ts",
        "../core/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "../core" }
  ]
}
