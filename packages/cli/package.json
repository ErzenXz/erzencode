{
  "name": "erzencode",
  "version": "0.3.0",
  "description": "AI-powered coding assistant CLI - Your intelligent pair programming companion",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "erzencode": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm --filter @erzencode/core build && tsc && vite build",
    "dev": "tsx src/cli.ts",
    "build:web-ui": "vite build",
    "start": "node dist/cli.js",
    "clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true});\"",
    "link:global": "pnpm build && pnpm link --global",
    "unlink:global": "pnpm unlink --global erzencode",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErzenXz/erzencode.git"
  },
  "homepage": "https://github.com/ErzenXz/erzencode#readme",
  "bugs": {
    "url": "https://github.com/ErzenXz/erzencode/issues"
  },
  "author": "Erzen Krasniqi",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@erzencode/core": "workspace:*",
    "@shikijs/cli": "^3.21.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "diff": "^8.0.3",
    "figures": "^6.1.0",
    "gradient-string": "^3.0.0",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^13.2.0",
    "react": "^19.2.3",
    "shiki": "^3.21.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "cli",
    "agent",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "llm",
    "developer-tools",
    "pair-programming"
  ]
}
