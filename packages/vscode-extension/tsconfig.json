{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "node"
    ],
    "baseUrl": "../..",
    "paths": {
      "@erzencode/core": ["./packages/core/dist"],
      "@erzencode/core/*": ["./packages/core/dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/webview/settings"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}