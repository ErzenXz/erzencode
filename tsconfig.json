{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@erzencode/core": [
                "./packages/core/dist/index.d.ts"
            ],
            "@erzencode/core/*": [
                "./packages/core/dist/*.d.ts",
                "./packages/core/dist/*/index.d.ts",
                "./packages/core/dist/*"
            ]
        },
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react-jsx",
        "noEmit": false,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/web-ui",
        "dist"
    ]
}