{
  "name": "erzencode",
  "version": "0.3.0",
  "private": true,
  "description": "AI-powered coding assistant CLI - Your intelligent pair programming companion",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "erzencode": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm --filter core build && pnpm --filter erzencode build && pnpm --filter erzencode-vscode build",
    "build:core": "pnpm --filter core build",
    "build:cli": "pnpm --filter erzencode build",
    "build:extension": "pnpm --filter erzencode-vscode build",
    "dev": "pnpm --filter erzencode dev",
    "dev:extension": "pnpm --filter erzencode-vscode dev",
    "dev:web-ui": "pnpm --filter erzencode dev:web-ui",
    "start": "pnpm --filter erzencode start",
    "clean": "node -e \"require('node:fs').rmSync('packages/*/dist',{recursive:true,force:true});\"",
    "link:global": "pnpm build && cd packages/cli && pnpm link --global",
    "unlink:global": "cd packages/cli && pnpm unlink --global",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "commit": "git-cz",
    "lint:commit": "commitlint --edit",
    "release": "semantic-release",
    "package:extension": "pnpm --filter erzencode-vscode package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErzenXz/erzencode.git"
  },
  "homepage": "https://github.com/ErzenXz/erzencode#readme",
  "bugs": {
    "url": "https://github.com/ErzenXz/erzencode/issues"
  },
  "author": "Erzen Krasniqi",
  "license": "MIT",
